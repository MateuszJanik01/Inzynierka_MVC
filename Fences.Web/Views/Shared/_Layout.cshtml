<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fences.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fences.Web.styles.css" asp-append-version="true" />

    <!-- Meta tags-->
    <meta name="author" content="Twoja Firma" />
    <meta name="theme-color" content="#007bff" />
    <meta name="description" content="Zarządzaj harmonogramem prac związanych z montażem ogrodzeń betonowych, panelowych oraz wiat. System Fences pozwala na efektywne dodawanie i aktualizowanie prac, ustawianie terminów realizacji oraz rodzaju prac." />
    <meta name="keywords" content="montaż ogrodzeń, ogrodzenia betonowe, ogrodzenia panelowe, montaż wiat, harmonogram prac, zarządzanie pracami, budowa, prace budowlane" />
    <meta name="robots" content="index, follow" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light box-shadow py-2">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fences.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-route-fragment="#offer" class="nav-link">Oferta</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-route-fragment="#aboutus" class="nav-link">O Nas</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-route-fragment="#gallery" class="nav-link">Galeria</a>
                        </li>
                        <li class="nav-item">
                            <a href="#contact" class="nav-link">Kontakt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer text-muted py-4">
        <p class="m-0">&copy <span class="footer-year"></span> - Fences.Web</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/2c11667af0.js" crossorigin="anonymous"></script>
</body>
</html>
